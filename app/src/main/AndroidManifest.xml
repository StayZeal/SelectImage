<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.gofun.selectimage">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ImageListActivity" />
        <activity android:name=".FileListActivity" />
        <activity android:name=".PreviewActivity" />
        <activity
            android:name=".pop.SelectImageActivity"
            android:label="SelectImageActivity" />
        <activity
            android:name=".spinner.SelectImageActivity"
            android:label="SpinnerImageActivity" />
    </application>

</manifest>